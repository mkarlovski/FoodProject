@model FoodProject.ViewModels.RecipeCreateView

@{
    ViewData["Title"] = "CreateTest";
}




    <div class="container form-container">

        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" id="recipeTitle" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" id="recipeDescription" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl" class="control-label"></label>
            <input asp-for="ImageUrl" id="recipeImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <p>Add ingredients:</p>
        <div class="recipeIngList">
            <ol id="CreateRecipe">
                <li class="addIngredientList" id="Ingredient1" style="list-style-type:none">
                    <input asp-for="Ingredients[0]" id="recipeIngredient[0]" class="recipeIngredientClass" type="text" placeholder="Add Ingredient">
                </li>
            </ol>
            <span>
                <button id="addIngredient" class="btn-sm btn-primary " onclick="AddIngredient(); return false;">Add ingredient</button>
            </span>
        </div>


        <div class="form-group">
            <label asp-for="Preparation" class="control-label"></label>
            <textarea asp-for="Preparation" id="recipePreparation" class="form-control" />
            <span asp-validation-for="Preparation" class="text-danger"></span>
        </div>


        <button class="btn btn-primary" onclick="CreateRecipe()">Add recipe</button>
    </div>


@section Scripts
{
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="~/js/createRecipe.js"></script>
}
