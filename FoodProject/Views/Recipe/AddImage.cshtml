@model FoodProject.ViewModels.RecipeAddImageView

@{
    ViewData["Title"] = "AddImage";
}

<h1>AddImage</h1>

<h4>RecipeAddImageView</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddImage" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               
                <input asp-for="Id" class="form-control" hidden />
               
            </div>
            <div class="form-group">
                <label asp-for="RecipeImage" class="control-label"></label>
                <input type="file" id="files" asp-for="RecipeImage" class="form-control" />
                <span asp-validation-for="RecipeImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
