@model FoodProject.ViewModels.RecipeDetailsViewModel
@{
    ViewData["Title"] = "Details";
}



    <div class="container">
        <div class="row">
            <div class="col">
                <p>Title</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p>Description</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <img class="card-img-top" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.RecipeImage)" alt="Card image cap">
            </div>
        </div>
        <div class="row">
            <div class="col-3 border-right">
                <p>List of ingredients</p>
                <ul>
                    @foreach (var entity in Model.Ingredients)
                    {
                        <li>@entity</li>
                    }
                </ul>


            </div>
            <div class="col-9 border-left">
                <p>preparation</p>
            </div>
        </div>

    </div>






