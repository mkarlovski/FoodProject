@model FoodProject.ViewModels.RecipeCreateView
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form action="Create" method="post">
    <ul id="CreateRecipe">
        <li>
            <input asp-for="Title" type="text" placeholder="Title" />
        </li>
        <li>
            <input asp-for="Description" type="text" placeholder="Description" />
        </li>

        <li>
            <input asp-for="Ingredients[0]" type="text" placeholder="ingredient">
        </li>
        <li>
            <input asp-for="Ingredients[1]" type="text" placeholder="ingredient">
        </li>
    </ul>
    <button id="addIngredient" onclick="AddIngredient(); return false;">Add more fields</button>
    <br>
    <br>
    <input type="submit">
</form>

@section Scripts
{ 
<script>
    function AddIngredient() {
        
        var list = document.getElementById("CreateRecipe");
        var newList = document.createElement("li");
        var input = document.createElement("input");
        input.setAttribute("asp-for", "Ingredients");
        input.setAttribute("type", "text");
        input.setAttribute("placeholder","Enter Ingredient");;
        list.appendChild(newList);
        newList.appendChild(input);
       
    }
</script>

}