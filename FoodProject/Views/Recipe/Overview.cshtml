@model List<FoodProject.ViewModels.RecipeOverview>
@{
    ViewData["Title"] = "Home Page";
}
@inject IConfiguration configuration

<p>
    <a asp-action="CreateTest">Add new recipe</a>
</p>

<div class="row">
    @foreach (var recipe in Model)
    {
        <div class="col-md-4">
            <div class="card" style="width: 14rem;">
                <a asp-action="Details" asp-route-id="@recipe.Id">
                    @if (recipe.RecipeImg!=null)
                    {
                        <img class="card-img-top" src="data:image/jpeg;base64,@Convert.ToBase64String(recipe.RecipeImg)" alt="Card image cap">
                    }
                    else
                    {
                        <img class="card-img-top" src="@configuration["DefaultFoodImagePath"]" alt="Card image cap">
                    }


                    

                    <div class="card-body">
                        <h5 class="card-title">@recipe.Title</h5>
                        <p class="card-text">@recipe.Description</p>

                    </div>
                </a>

            </div>
        </div>
    }
</div>