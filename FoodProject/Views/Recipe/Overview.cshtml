@model List<FoodProject.ViewModels.RecipeOverview>
@{
    ViewData["Title"] = "Home Page";
}
@inject IConfiguration configuration

@section Styles{

<link href="~/css/overviewRecipe.css" rel="stylesheet" />
 }


    <form asp-action="Overview" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group">            
            <input name="searchRecipe" class="form-control" placeholder="Search Recipe by title or ingredient" />          
        </div>
        <div class="form-group">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>


<div class="row">
    @foreach (var recipe in Model)
    {
    <div class="col-md-4 p-1 mb-md-1">
        <div class="card" style="width: 14rem;">
            @if (recipe.RecipeImg != null)
            {
                <img class="card-img-top" src="data:image/jpeg;base64,@Convert.ToBase64String(recipe.RecipeImg)" style="height:166px;" alt="Card image cap">
            }
            else
            {
                <img class="card-img-top" src="@configuration["DefaultFoodImagePath"]" alt="Card image cap">
            }
        <div style="display:flex; justify-content:space-between">
            <a asp-action="Details" asp-route-id="@recipe.Id" style="text-decoration:none; margin-bottom:5px;">
                <div class="card-body" style="height:120px; margin:0;">
                    <h5 class="card-title">@recipe.Title</h5>
                    <p class="card-text" style="text-overflow:clip">@recipe.Description</p>
                </div>
            </a>
            @if (User.Identity.IsAuthenticated)
            {
                if (recipe.RecipeLikes.Any(x=>x.UserId==recipe.CurrentUserId))
                {
                    <button  id="btnAddLike" class="btn w-25 h-25 displayNone" style="font-size:20px" onclick="RecipeLike(@recipe.Id); return false;">&#9825;</button> //heart shape
                    <button  id="btnRemoveLike" class="btn w-25 h-25" style="font-size:20px;" onclick="RemoveRecipeLike(@recipe.Id); return false;" >&#10003;</button> //check sign
                }

               else
                {
                    <button id="btnAddLike" class="btn w-25 h-25" style="font-size:20px;" onclick="RecipeLike(@recipe.Id);  return false;">&#9825;</button> //heart shape
                    <button id="btnRemoveLike" class="btn w-25 h-25 displayNone" style="font-size:20px" onclick="RemoveRecipeLike(@recipe.Id);  return false;">&#10003;</button>//check sign
                }
            }
        </div>
       </div>
       
    </div>
    }
</div>

@section Scripts{
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="~/js/recipeOverview.js"></script>
 }